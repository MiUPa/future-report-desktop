{
  "name": "future-report-desktop",
  "version": "1.0.0",
  "description": "需要予測アプリケーション",
  "main": "app/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "build:mac": "electron-builder --mac",
    "build:win": "electron-builder --win"
  },
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "electron": "^23.0.0",
    "electron-builder": "^24.0.0"
  },
  "dependencies": {
    "axios": "^1.3.4",
    "chart.js": "^4.2.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.8.2"
  },
  "build": {
    "appId": "com.example.future-report",
    "productName": "Future Report",
    "mac": {
      "category": "public.app-category.business"
    },
    "win": {
      "target": "nsis"
    },
    "files": [
      "app/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "directories": {
      "buildResources": "resources"
    },
    "extraResources": [
      {
        "from": "app/backend",
        "to": "backend",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "app/models",
        "to": "models",
        "filter": [
          "**/*"
        ]
      }
    ]
  }
} 